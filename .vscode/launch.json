    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch TestProblemSolution",
            "request": "launch",
            "mainClass": "TestProblemSolution",
            "projectName": "pc2lib2"
        },
        {
            "type": "java",
            "name": "Launch Tests",
            "request": "launch",
            "mainClass": "Tests",
            "projectName": "pc2lib2"
        },
        {
            "type": "java",
            "name": "Launch Main",
            "request": "launch",
            "mainClass": "com.lingfeishengtian.Main",
            "projectName": "pc2lib2",
            "vmArgs": "-Djdk.crypto.KeyAgreement.legacyKDF=true"
        },
        {
            "type": "java",
            "name": "Launch CLIStarter",
            "request": "launch",
            "mainClass": "com.lingfeishengtian.cli.CLIStarter",
            "projectName": "pc2lib2",
            "vmArgs": "-Djdk.crypto.KeyAgreement.legacyKDF=true"
        },
        {
            "type": "java",
            "name": "Launch GUIStarter",
            "request": "launch",
            "mainClass": "com.lingfeishengtian.gui.GUIStarter",
            "projectName": "pc2lib2",
            "vmArgs": "-Djdk.crypto.KeyAgreement.legacyKDF=true --module-path $PATH_TO_FX --add-modules javafx.controls,javafx.fxml"
        }
    ]
}